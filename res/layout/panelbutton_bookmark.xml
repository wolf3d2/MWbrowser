<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/panelButtonSize"
    android:layout_height="@dimen/panelButtonSize"
    android:layout_gravity="center"
    android:paddingLeft="3dp"
    >
    <ImageView android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/panelButtonSize"
        android:minHeight="@dimen/panelButtonSize"
        android:maxWidth="@dimen/panelButtonSquareSize"
        />
    <TextView android:id="@+id/normalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/backgroundImage"
        android:layout_alignRight="@id/backgroundImage"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:textSize="@dimen/panel_buttons_font_size"
        android:background="#aa000000"
        android:layout_alignParentBottom="true"
        />
    <ImageView android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/normalText"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/panelButtonIcon"
        android:maxHeight="@dimen/panelButtonIcon"
        />
    <ImageView android:id="@+id/smallImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/image"
        android:visibility="gone"
        />
    </RelativeLayout>
