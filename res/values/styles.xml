<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    <style name="StyleButton" >
		        <item name="android:layout_width">44dp</item>
                <item name="android:layout_height">44dp</item>
                <item name="android:padding">5dp</item>

</style>    
    <style name="generalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/general_text_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="generalTextLink" parent="generalText">
        <item name="android:textSize">@dimen/link_text_size</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">#ff0000</item>
        <item name="android:autoLink">web|email</item>
    </style>

    <style name="biggerText" parent="generalText">
        <item name="android:textSize">@dimen/bigger_text_size</item>
    </style>

    <style name="emptyView" parent="biggerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ddDA81F5</item>
        <item name="android:padding">@dimen/alert_padding</item>
        <item name="android:textColor">#000000</item>
        </style>

    <style name="bigBoldText" parent="biggerText">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#00ff00</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    
    </style>
    
    <style name="playerControlAnim">
        <item name="@android:windowEnterAnimation">@anim/anim_bottom_in_short</item>
        <item name="@android:windowExitAnimation">@anim/anim_bottom_out_short</item>
    </style>
    <style name="sidebarAnim">
        <item name="@android:windowEnterAnimation">@anim/anim_left_in_long</item>
        <item name="@android:windowExitAnimation">@null</item>
    </style>
    <style name="contextMenuTop">
        <item name="@android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="contextMenuBottom">
        <item name="@android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_up</item>
    </style>
    <style name="CustomDialogEditor" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowActionModeOverlay" tools:ignore="NewApi">true</item>
        </style>
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        </style>
    <style name="CustomDialogFullscreenTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/transparent</item>
        </style>
    <style name="FullscreenDialogTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        </style>
	<style name="DialogEditText" parent="biggerText">
        <item name="android:paddingLeft">@dimen/magic_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/black_edit_background</item>
	</style>
	<style name="titleText" parent="biggerText">
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:padding">@dimen/magic_padding</item>
	    <item name="android:background">@drawable/main_header_back</item>
    </style>
    <style name="AlertButton" parent="generalText">
        <item name="android:background">@drawable/black_background</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/magic_padding</item>
        <item name="android:paddingBottom">@dimen/magic_padding</item>
    </style>
    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editor_text_size</item>
        <item name="android:textColor">#ffffff</item>
        <!-- item name="android:typeface">serif</item-->
    </style>
    <style name="textEdit" parent="textView">
        
        <item name="android:textColorHint">#aaaaaa</item>
        <item name="android:typeface">monospace</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">#000000</item>
        
    </style>
	<style name="dialogTitle" parent="textView">
	    <item name="android:background">#7F0037</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        	</style>    
	<style name="shadowText" parent="textView">
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowRadius">1</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
</style>    

	<style name="MainTheme" parent="@android:style/Theme.Wallpaper.NoTitleBar">
    </style>
	
</resources>
